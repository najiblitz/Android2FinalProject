<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".BonusFragment">


    <TextView
        android:id="@+id/discountTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:fontFamily="casual"
        android:text="@string/discountTitle"
        android:textAlignment="center"
        android:textColor="@color/pinkText"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/discountInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/darkText"
        android:text="@string/discountContent" />

    <ImageButton
        android:id="@+id/bonusButton"
        android:paddingTop="50dp"
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/bonus" />

</LinearLayout>